<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.yeye.ohmykids.schedule.dao.ScheduleDAO">
 	<insert id="insertSchedule" parameterType="map">
 		INSERT INTO
 			`schedule`
 		(
 			`userId`
 			, `userName`
 			, `userType`
 			, `kidsClass`
 			, `title`
 			, `description`
 			, `start`
 			, `end`
 			, `color`
 			, `createdAt`
 			, `updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			, #{userName}
 			, #{userType}
 			, #{kidsClass}
 			, #{title}
 			, #{description}
 			, #{start}
 			, #{end}
 			, #{color}
 			, now()
 			, now() 
 		)
 	</insert>
 	<select id="selectSchedule" resultType="com.yeye.ohmykids.schedule.model.Schedule">
 		SELECT
 			`id`
 			, `userId`
 			, `userName`
 			, `userType`
 			, `kidsClass`
 			, `title`
 			, `description`
 			, `start`
 			, `end`
 			, `color`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 		 `schedule`
 	</select>
 	<select id="selectScheduleById" parameterType="int" resultType="com.yeye.ohmykids.schedule.model.Schedule">
 		SELECT
 			`id`
 			, `userId`
 			, `userName`
 			, `userType`
 			, `kidsClass`
 			, `title`
 			, `description`
 			, `start`
 			, `end`
 			, `color`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 		 `schedule`
 		WHERE `id` = #{id}
 	</select>
 	<update id="updatedSchedule" parameterType = "map">
 		UPDATE 
 			`schedule`
 		SET
 			
 			`kidsClass` = #{kidsClass}
 			, `title` = #{title}
 			<if test = "description != null">
 			, `description` = #{description}
 			</if>
 			, `color` = #{color}
 		WHERE
 			`id` = #{id}
 	</update>
 	<delete id="deleteSchedule" parameterType = "int">
 		DELETE FROM
 			`schedule`
 		WHERE `id` = #{id}
 	</delete>
 	
 </mapper>