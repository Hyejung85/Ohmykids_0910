<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.yeye.ohmykids.album.dao.AlbumDAO">
 	<insert id="insertAlbum" parameterType="map">
 		INSERT INTO
 			`album`
 		(
 			`userId`
 			, `userName`
 			, `type`
 			, `kidsId`
 			, `kidsClass`
 			, `kidsName`
 			, `weather`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			, #{userName}
 			, #{type}
 			, #{kidsId}
 			, #{kidsClass}
 			, #{kidsName}
 			, #{weather}
 			, #{content}
 			, #{imagePath}
 			, now()
 			, now()
 		)
 	</insert>
 	<!-- 앨범리스트 -->
 	<select id="selectAlbumList" resultType="com.yeye.ohmykids.album.model.Album">
 		SELECT
 			`id`
 			, `userId`
 			, `userName`
 			, `type`
 			, `kidsId`
 			, `kidsClass`
 			, `kidsName`
 			, `weather`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`album`
 		ORDER BY `id` DESC
 	</select>
 	<!-- 앨범상세 -->
 	<select id="selectAlbumById" parameterType="map" resultType="com.yeye.ohmykids.album.model.Album">
 		SELECT
 			`id`
 			, `userId`
 			, `userName`
 			, `type`
 			, `kidsId`
 			, `kidsClass`
 			, `kidsName`
 			, `weather`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`album`
 		WHERE
 			`userId` = #{userId}
 			AND `id` = #{id} 
 	</select>
 	<update id = "updateAlbum" parameterType="map">
 		UPDATE 
 			`album`
 		SET
 			`weather` = #{weather}
 			, `content` = #{content}
 				<if test = "imagePath != null">
 			, `imagePath` = '%'||#{imagePath}||'%'
 				</if>
 		WHERE
 			`id` = #{id}
 	</update>
 	<delete id="deleteAlbum" parameterType="map">
 		DELETE FROM	`album`
 		WHERE 
 			`id` = #{id}
 			AND `userId` = #{userId}
 	</delete>
 	<!-- 파일삭제 -->
 	<select id="selectAlbum" parameterType="int" resultType="com.yeye.ohmykids.album.model.Album">
 		SELECT
 			`id`
 			, `userId`
 			, `userName`
 			, `type`
 			, `kidsId`
 			, `kidsClass`
 			, `kidsName`
 			, `weather`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`album`
 		WHERE
 			`id` = #{id}
 	</select>
 
 </mapper>
 
 
 