<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.yeye.ohmykids.note.dao.NoteDAO">
 	<!-- useGeneratedKeys 사용 -->
 	<insert id="insertNote" parameterType="map">
 		INSERT INTO
 			`note`
 		(
 			`userId`
 			, `userName`
 			, `userType`
 			, `type`
 			, `kidsId`
 			, `kidsClass`
 			, `kidsName`
 			, `parentsId`
 			, `weather`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			, #{userName}
 			, #{userType}
 			, #{type}
 			, #{kidsId}
 			, #{kidsClass}
 			, #{kidsName}
 			, #{parentsId}
 			, #{weather}
 			, #{content}
 			, #{imagePath}
 			, now()
 			, now()
 		)
 	</insert>
 	<!-- 알림장 리스트 -->
 	<select id="selectNoteList" resultType="com.yeye.ohmykids.note.model.Note">
 		SELECT
 			`id`
 			,`userId`
 			, `userName`
 			, `userType`
 			, `type`
 			, `kidsId`
 			, `kidsClass`
 			, `kidsName`
 			, `parentsId`
 			, `weather`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`note`
 		ORDER BY `id` DESC
 	</select>
 	<!-- 알림장 리스트(for parents)-->
 	<select id="selectNoteListForParents" resultType="com.yeye.ohmykids.note.model.Note">
 		SELECT
 			`id`
 			,`userId`
 			, `userName`
 			, `userType`
 			, `type`
 			, `kidsId`
 			, `kidsClass`
 			, `kidsName`
 			, `parentsId`
 			, `weather`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`note`
 		WHERE `parentsId` = #{parentsId}
 		ORDER BY `id` DESC
 	</select>
 	<!-- 알림장 상세 -->
 	<!-- <select id="selectNoteById" parameterType = "map" resultType="com.yeye.ohmykids.note.model.Note">
 		SELECT
 			`id`
 			,`userId`
 			, `userName`
 			, `userType`
 			, `type`
 			, `kidsId`
 			, `kidsClass`
 			, `kidsName`
 			, `weather`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`note`
 		WHERE
 			`userId` = #{userId}
 			AND `id` = #{id} 	
 	</select> -->
 	<!-- 알림장 상세(for teacher) -->
 	<select id="selectNoteByIdForTeacher" parameterType = "map" resultType="com.yeye.ohmykids.note.model.Note">
 		SELECT
 			`id`
 			,`userId`
 			, `userName`
 			, `userType`
 			, `type`
 			, `kidsId`
 			, `kidsClass`
 			, `kidsName`
 			, `parentsId`
 			, `weather`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`note`
 		WHERE
 			`id` = #{id} 	
 	</select>
 	<update id="updateNote" parameterType="map">
 		UPDATE
 			`note`
 		SET
 			`content` = #{content}
 				<if test = "imagePath != null">
 			, `imagePath` = #{imagePath}
 				</if>
 		WHERE
 			`id` = #{id}
 	
 	</update>
 	<delete id="deleteNote" parameterType="map">
 		DELETE FROM `note`
 		WHERE
 			`id` = #{id}
 			AND `userId` = #{userId} 	
 	</delete>
 	<!-- 파일삭제 -->
 	<select id="selectNote" parameterType="int" resultType="com.yeye.ohmykids.note.model.Note">
 		SELECT 
 			`id`
 			,`userId`
 			, `userName`
 			, `userType`
 			, `type`
 			, `kidsId`
 			, `kidsClass`
 			, `kidsName`
 			, `parentsId`
 			, `weather`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`note`
 		WHERE `id` = #{id}
 	</select>

 </mapper>